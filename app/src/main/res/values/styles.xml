<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <style name="FormEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">@drawable/edittextbackground</item>
        <item name="android:textColor">@color/formTextColor</item>
        <item name="android:textColorHint">@color/formTextColor</item>
    </style>

    <style name="FormButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">@drawable/buttonbackground</item>
    </style>

    <style name="FormConteiner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_box_bg</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

</resources>
